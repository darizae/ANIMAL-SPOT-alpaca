#!/usr/bin/env bash
set -euo pipefail

REMOTE_USER="u17184"
REMOTE_HOST="glogin-gpu.hpc.gwdg.de"
REMOTE_PATH="/user/d.arizaecheverri/u17184/repos/ANIMAL-SPOT-alpaca/PREDICTION/runs"

LOCAL_PATH="$HOME/repos/ANIMAL-SPOT-alpaca/PREDICTION/server_runs"

mkdir -p "$LOCAL_PATH"

if scp -r "${REMOTE_USER}@${REMOTE_HOST}:${REMOTE_PATH}/." "$LOCAL_PATH"; then
  echo "✅ Prediction logs & outputs copied to '$LOCAL_PATH'"
else
  echo "❌ Download failed." >&2
  exit 1
fi